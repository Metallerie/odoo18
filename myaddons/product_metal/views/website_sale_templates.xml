<odoo>
    <template id="product_metal_quantity_unit" inherit_id="website_sale.cart_lines">
        <xpath expr="//div[@id='cart_products']/div/t/div[2]" position="inside">
            <t t-if="line.product_id and 2 in line.product_id.public_categ_ids.ids">
                <div class="small text-muted my-2">
                    <t t-if="line.product_custom_description">
                        Longueur choisie : <t t-esc="line.product_custom_description"/>
                    </t>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
