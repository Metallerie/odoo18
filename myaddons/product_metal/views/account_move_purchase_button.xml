<odoo>
  <record id="view_invoice_form_purchase_button" model="ir.ui.view">
    <field name="name">invoice.form.purchase.order.button</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_create_purchase_order_from_invoice"
                type="object"
                string="Créer bon de commande"
                class="btn btn-secondary"
                decoration-bf="purchase_order_id or move_type != 'in_invoice' or state != 'posted'"/>
      </xpath>
    </field>
  </record>

  <record id="view_invoice_form_validate_po_and_receipt" model="ir.ui.view">
    <field name="name">invoice.form.validate.po.and.receipt</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_validate_purchase_and_create_receipt"
                type="object"
                string="Valider bon de commande + Réception"
                class="btn btn-success"
                decoration-bf="not purchase_order_id or stock_picking_id or move_type != 'in_invoice' or state != 'posted'"/>
      </xpath>
    </field>
  </record>
</odoo>
