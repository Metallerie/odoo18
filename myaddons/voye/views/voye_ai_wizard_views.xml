<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_voye_ai_wizard_form" model="ir.ui.view">
    <field name="name">voye.ai.wizard.form</field>
    <field name="model">voye.ai.wizard</field>
    <field name="arch" type="xml">
      <form string="Assistant IA Voye">
        <group>
          <field name="prompt" placeholder="Pose ta question..." nolabel="1"/>
          <field name="answer" nolabel="1" readonly="1"/>
        </group>

        <group>
          <field name="model_name" readonly="1"/>
          <field name="log_id" invisible="1"/>
        </group>

        <group string="Appréciation" invisible="not log_id">
          <field name="rating" widget="radio"/>
          <field name="rating_comment"
                 placeholder="Pourquoi cette réponse est-elle mauvaise ?"
                 invisible="rating != 'down'"/>
        </group>
        <group>
        <field name="speaker_label" readonly="1"/>
        <field name="context_label" readonly="1"/>
        <field name="context_ref" readonly="1" invisible="not context_ref"/>
        </group>


        <footer>
          <button name="action_ask" type="object" string="Envoyer" class="btn-primary"/>
          <button special="cancel" string="Fermer" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_voye_ai_wizard" model="ir.actions.act_window">
    <field name="name">Assistant IA</field>
    <field name="res_model">voye.ai.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>
</odoo>
