<!-- ig_market_data/views/ig_instrument_views.xml -->
<odoo>
  <record id="view_ig_instrument_tree" model="ir.ui.view">
    <field name="name">ig.instrument.tree</field>
    <field name="model">ig.instrument</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="epic"/>
        <field name="active"/>
        <field name="asia_open_hour_utc"/>
        <field name="asia_open_minute_utc"/>
      </list>
    </field>
  </record>

  <record id="view_ig_instrument_form" model="ir.ui.view">
    <field name="name">ig.instrument.form</field>
    <field name="model">ig.instrument</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="epic"/>
            <field name="market_id"/>
            <field name="active"/>
          </group>
          <group string="Asie (UTC)">
            <field name="asia_open_hour_utc"/>
            <field name="asia_open_minute_utc"/>
          </group>
          <group>
            <field name="pip_size"/>
            <field name="currency"/>
          </group>
          <field name="note"/>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_ig_instruments" model="ir.actions.act_window">
    <field name="name">Instruments</field>
    <field name="res_model">ig.instrument</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
