<odoo>
    <!-- Menu OCR -->
    <menuitem id="menu_ocr_root"
              name="OCR"
              sequence="100"
              parent="account.menu_finance" />

    <!-- Sous-menu Règles Partenaires -->
    <menuitem id="menu_ocr_partner_rules"
              name="Règles Partenaires"
              parent="menu_ocr_root"
              action="action_ocr_partner_rules" />

    <!-- Action -->
    <record id="action_ocr_partner_rules" model="ir.actions.act_window">
        <field name="name">Règles OCR - Partenaires</field>
        <field name="res_model">ocr.configuration.rule.partner</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- Vue liste -->
    <record id="view_ocr_partner_rule_tree" model="ir.ui.view">
        <field name="name">ocr.configuration.rule.partner.tree</field>
        <field name="model">ocr.configuration.rule.partner</field>
        <field name="arch" type="xml">
            <tree default_order="sequence asc">
                <field name="sequence"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="keyword"/>
                <field name="search_in"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_ocr_partner_rule_form" model="ir.ui.view">
        <field name="name">ocr.configuration.rule.partner.form</field>
        <field name="model">ocr.configuration.rule.partner</field>
        <field name="arch" type="xml">
            <form string="Règle OCR Partenaire">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="partner_id" options="{'no_create': False}"/>
                        <field name="keyword"/>
                        <field name="search_in"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_ocr_partner_rule_kanban" model="ir.ui.view">
        <field name="name">ocr.configuration.rule.partner.kanban</field>
        <field name="model">ocr.configuration.rule.partner</field>
        <field name="arch" type="xml">
            <kanban default_group_by="active">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="keyword"/>
                <field name="search_in"/>
                <field name="sequence"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <strong><field name="name"/></strong>
                            <div>
                                <span class="o_label">Partenaire :</span>
                                <field name="partner_id"/>
                            </div>
                            <div>
                                <span class="o_label">Mot-clé :</span>
                                <field name="keyword"/>
                            </div>
                            <div>
                                <span class="o_label">Champ :</span>
                                <field name="search_in"/>
                            </div>
                            <div>
                                <span class="o_label">Ordre :</span>
                                <field name="sequence"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
