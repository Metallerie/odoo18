<odoo>
    <!-- Action pour ouvrir les règles partenaires -->
    <record id="action_ocr_partner_rules" model="ir.actions.act_window">
        <field name="name">Règles Partenaires OCR</field>
        <field name="res_model">ocr.configuration.rule.partner</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Configuration → OCR Partenaires -->
    <menuitem id="menu_ocr_partner_rules"
              name="Règles Partenaires OCR"
              parent="account.menu_finance_configuration"
              action="action_ocr_partner_rules"
              groups="account.group_account_readonly,account.group_account_invoice"
              sequence="50"/>
    
    <!-- Vue liste -->
    <record id="view_ocr_partner_rule_list" model="ir.ui.view">
        <field name="name">ocr.configuration.rule.partner.list</field>
        <field name="model">ocr.configuration.rule.partner</field>
        <field name="arch" type="xml">
            <list default_order="sequence asc">
                <field name="sequence"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="keyword"/>
                <field name="search_in"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire -->
    <record id="view_ocr_partner_rule_form" model="ir.ui.view">
        <field name="name">ocr.configuration.rule.partner.form</field>
        <field name="model">ocr.configuration.rule.partner</field>
        <field name="arch" type="xml">
            <form string="Règle OCR Partenaire">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="partner_id" options="{'no_create': False}"/>
                        <field name="keyword"/>
                        <field name="search_in"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
