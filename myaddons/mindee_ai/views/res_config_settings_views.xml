<odoo>
  <data>
    <record id="view_res_config_settings_mindee_ai" model="ir.ui.view">
      <field name="name">res.config.settings.mindee.ai</field>
      <field name="model">res.config.settings</field>
      <!-- essaie cet inherit_id -->
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="priority" eval="90"/>
      <field name="arch" type="xml">
        <!-- on insÃ¨re directement dans le <form> principal -->
        <xpath expr="//form[@js_class='base_settings']" position="inside">
          <group string="OCR &amp; Factures" name="group_mindee_ai">
            <field name="mindee_backend"/>
            <field name="mindee_doctr_url"
                   attrs="{'invisible':[('mindee_backend','!=','doctr')]}"/>
            <field name="mindee_api_key"
                   attrs="{'invisible':[('mindee_backend','!=','mindee_v2')]}"/>
            <field name="mindee_model_id"
                   attrs="{'invisible':[('mindee_backend','!=','mindee_v2')]}"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
