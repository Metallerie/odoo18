# views/forum_post_views.xml
<odoo>
  <record id="view_forum_post_form_seo" model="ir.ui.view">
    <field name="name">forum.post.form.seo</field>
    <field name="model">forum.post</field>
    <field name="inherit_id" ref="website_forum.view_forum_post_form"/>
    <field name="arch" type="xml">
      <xpath expr="//group" position="inside">
        <field name="exclude_from_sitemap"/>
        <field name="noindex"/>
      </xpath>
    </field>
  </record>
</odoo>
