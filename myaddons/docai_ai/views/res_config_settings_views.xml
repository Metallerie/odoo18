<odoo>
  <record id="view_res_config_settings_docai" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.docai</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form[@js_class='base_settings']" position="inside">       
        <div class="app_settings_block" data-string="Google Document AI">
        <block title="Google Document AI" name="google_document_AI_setting_container">
          <h2>Google Document AI</h2>
              <div class="o_setting_left_pane">
                <div class="o_form_label">Project ID</div>
                <div class="o_form_field"><field name="docai_project_id"/></div>

                <div class="o_form_label">Location</div>
                <div class="o_form_field"><field name="docai_location"/></div>

                <div class="o_form_label">Clé JSON</div>
                <div class="o_form_field"><field name="docai_key_path"/></div>

                <div class="o_form_label">Processor Facture</div>
                <div class="o_form_field"><field name="docai_invoice_processor_id"/></div>

                <div class="o_form_label">Facture de test</div>
                <div class="o_form_field">
                  <field name="docai_test_invoice_path" placeholder="/data/Documents/factures_archive/test.pdf"/>
                </div>
              </div>
              <div class="o_setting_right_pane">
                <p>
                  Configure ici tes identifiants Google Document AI :
                  <br/>• Processor factures fournisseur
                  <br/>• Clé JSON + chemin facture de test
                </p>
                <button name="action_test_docai_connection"
                        type="object"
                        string="Tester connexion"
                        class="btn btn-primary"/>
              </div>
           </block>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
