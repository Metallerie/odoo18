<odoo>
  <!-- Héritage de la vue facture pour ajouter un onglet OCR JSON docai_json_runner.xml -->
  <record id="view_move_form_json" model="ir.ui.view">
    <field name="name">account.move.form.json</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <!-- Onglet OCR JSON -->
        <page string="OCR JSON">
          <field name="docai_json" widget="text" readonly="1" nolabel="1"/>
        </page>
      </xpath>
    </field>
  </record>

  <!-- Bouton en header -->
  <record id="view_form_docai_json_runner" model="ir.ui.view">
    <field name="name">account.move.form.docai.json.runner</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_docai_refresh_json"
                string="Rafraîchir JSON"
                type="object"
                class="btn-secondary" />
      </xpath>
    </field>
  </record>
</odoo>
