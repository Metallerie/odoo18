<odoo>
  <!-- Inherit vue formulaire des factures pour ajouter le champ + l’onglet OCR -->
    <record id="view_move_form_inherit_ocr_json" model="ir.ui.view">
        <field name="name">account.move.form.inherit.ocr.json</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">

                <!-- ✅ Onglet OCR JSON -->
                <page string="OCR Brut">
                    <field name="docai_json" widget="json" readonly="1">
                        
                    </field>
                </page>

                </xpath>
        </field>
    </record>
  <record id="view_form_docai_json_runner" model="ir.ui.view">
    <field name="name">account.move.form.docai.json.runner</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_docai_refresh_json"
                string="Rafraîchir JSON"
                type="object"
                class="btn-secondary"
                attrs="{'invisible': [('move_type','!=','in_invoice')]}"/>
      </xpath>
    </field>
  </record>
</odoo>
