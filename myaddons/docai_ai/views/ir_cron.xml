<odoo>
    <data noupdate="1">
        <record id="ir_cron_docai_auto_import" model="ir.cron">
            <field name="name">Import factures PDF - Docai</field>
            <field name="model_id" ref="docai_ai.model_docai_ai_invoice_import"/>
            <field name="state">code</field>
            <field name="code">model.import_pdf_invoices()</field>
            <field name="interval_type">minutes</field>
            <field name="interval_number">10</field>
            <field name="active">True</field>
        </record>
    </data>

    <!-- CRON : Analyse automatique des factures avec DocAI -->
    <record id="ir_cron_docai_analyze_invoices" model="ir.cron">
        <field name="name">Analyse DocAI des factures</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="state">code</field>
        <field name="code">
            model.search([('move_type', '=', 'in_invoice'), ('state', '=', 'draft')]).action_docai_analyze_attachment()
        </field>
        <!-- Exécution toutes les nuits à 3h -->
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(hours=3)).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>

</odoo>
