<odoo>
    <record id="whatsapp_send_message_view_form" model="ir.ui.view">
        <field name="name">whatsapp.send.message.form</field>
        <field name="model">whatsapp.send.message</field>
        <field name="arch" type="xml">
            <form string="Envoyer un message WhatsApp">
                <group>
                    <field name="user_id" readonly="1"/>
                    <field name="mobile"/>
                </group>
                <group>
                    <field name="message"/>
                </group>
                <footer>
                    <button name="action_send_message" string="Envoyer sur WhatsApp" type="object" class="btn-primary"/>
                    <button name="cancel" string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
